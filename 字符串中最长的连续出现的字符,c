#include <stdio.h>
#include <string.h>

int main() {
    int N;
    scanf("%d", &N);
    
    while (N--) {
        char str[201];
        scanf("%s", str);
        int len = strlen(str);
        
        char max_char = str[0], cur_char = str[0];
        int max_len = 1, cur_len = 1;
        
        for (int i = 1; i < len; i++) {
            if (str[i] == cur_char) {
                cur_len++;
            } else {
                cur_char = str[i];
                cur_len = 1;
            }
            
            if (cur_len > max_len) {
                max_len = cur_len;
                max_char = cur_char;
            }
        }
        
        printf("%c %d\n", max_char, max_len);
    }
    
    return 0;
}